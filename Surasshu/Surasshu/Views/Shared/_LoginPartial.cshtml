@using Microsoft.AspNetCore.Identity
@using Surasshu.Areas.Identity.Data
@inject SignInManager<SurasshuUser> SignInManager
@inject UserManager<SurasshuUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Profile" asp-action="GetProfile" asp-route-userId="@User.Identity">
            <img alt="profile-pic" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSSHOuptGhqIbhXJHddNAf6BqQvJCPK6p_X7w&usqp=CAU"/>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
