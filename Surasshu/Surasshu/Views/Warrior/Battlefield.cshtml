@model IEnumerable<Warrior>

<body class="battlefield">
    <div class="container bg-black text-white">
        <div class="row">
            <div class="col">
                @foreach (var warrior in Model)
                {
                    if (warrior.UserId == User.Identity.ToString())
                    {
                        <img src="@warrior.ImageLink"/>
                        <div>@warrior.WarriorName</div>
                        <div>@warrior.Hp (current hp / max hp)</div>
                    }
                }
            </div>
            <div class="col-6 bg-text">Text to show the progress of the battle</div>
            <div class="col">
                @foreach (var warrior in Model)
                {
                    if (warrior.UserId != User.Identity.ToString())
                    {
                        <img src="@warrior.ImageLink" />
                        <div>@warrior.WarriorName</div>
                        <div>@warrior.Hp (current hp / max hp)</div>
                    }
                }
            </div>
        </div>
    </div>
</body>