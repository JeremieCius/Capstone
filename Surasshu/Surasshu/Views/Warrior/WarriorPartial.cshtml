@inject IDataAccessLayer Dal
@using Surasshu.Interfaces
@model Warrior

<div class="card-body bg-opacity-75 card text-white bg-secondary mb-3">
    <h4 class="card-title">@Model.WarriorName</h4>
    <table class="table">
        <tr>
            <td>Level</td>
            <td>@Model.Level</td>
        </tr>
        <tr>
            <td>HP</td>
            <td>@Model.Hp</td>
        </tr>
        <tr>
            <td>Attack Modifier</td>
            <td>@Model.AttackMod</td>
        </tr>
        <tr>
            <td>Crit Modifier</td>
            <td>@Model.Crit</td>
        </tr>
        <tr>
            <td>Defense</td>
            <td>@Model.Defense</td>
        </tr>
        <tr>
            <td>XP</td>
            <td>@Model.Xp / 100</td>
        </tr>
        
        <tr>
            <td>Quirk One</td>
            <td>@Dal.GetQuirkByInt(Model.QuirkOneId).QuirkName</td>
        </tr>
    
        <tr>
            <td>Quirk Two</td>
            <td>@Dal.GetQuirkByInt(Model.QuirkTwoId).QuirkName</td>
        </tr>
        @if (Model.IsNinja)
        {
            <tr>
                <td>Quirk Three</td>
                <td>@Dal.GetQuirkByInt(Model.QuirkThreeId).QuirkName</td>
            </tr>
        }
        else
        {

        }  
    </table>
</div>
